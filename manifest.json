{
    "manifest_version": 3,
    "name": "Cringe Guard: filter out cringe content on your LinkedIn feed using AI",
    "author": "Pankaj Tanwar",
    "version": "0.0.3",
    "description": "AI-powered Chrome extension that filters cringe, clickbait & low-value posts from your LinkedIn feed in real-time.",
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://www.linkedin.com/feed/*"
            ]
        },
        {
            "js": [
                "scripts/linkedin-utils.js",
                "scripts/unfollow-core.js",
                "scripts/bulk_unfollow.js",
                "scripts/accept-requests.js"
            ],
            "matches": [
                "https://www.linkedin.com/*"
            ]
        }
    ],
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_popup": "./pages/popup.html",
        "default_title": "Cringe Guard"
    },
    "options_page": "./pages/settings.html",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ]
}